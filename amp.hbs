    {{!-- Post Styles --}}
    <style amp-custom>
        :root {
            --font-nutito: 'Nunito', sans-serif;
            --font-lato: 'Lato', sans-serif;
            --color-black: #1B1B1B;
            --color-dark: #50514F;
            --color-red: #F25F5C;
            --color-yellow: #FFE066;
            --color-blue: #299FD3;
            --color-green: #70C1B3;
            --color-gray-C: #9998A4;
            --color-gray-B: #E1E4E7;
            --color-gray-A: #F5F5F5;
            --color-white: #F8FBFB;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: var(--font-nutito);
        }
            
        body {
            font-family: var(--font-lato);
        }

        a {
            text-decoration: none;
        }
            
        figure {
            margin: 0;
        }

        ul[class*='no-list'] {
            list-style: none;
            padding: 0;
        }

        .header {
            background-color: var(--color-blue);
            padding: 0.5rem 0.7rem;
            height: 40px;
        }

        .header__title {
            line-height: 40px;
            display: inline-block;
        }

        .header__title .header__text {
            font-size: 1.5rem;
            font-family: var(--font-nutito);
            letter-spacing: 1px;
        }

        .header__title .header__text .header__link {
            color:  #F8FBFB;
        }

        .header__menu {
            line-height: 45px;
            display: inline-block;
            float: right;
        }

        .header__menu .header__icon {
            font-size: 1.5rem;
            color: var(--color-white);
            border: none;
            background: none;
            margin: 0;
            padding: 0;
        }

        .menu {
            background: var(--color-white);
            width: 80%;
            padding: 1.5rem 2rem;
            box-sizing: border-box;
            position: relative;
        }

        .menu .menu__arrow {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: var(--color-blue);
            box-shadow: 4px 4px 0 var(--color-red);
            padding: 0.5rem 0.7rem;
            font-size: 1.7rem;
            color: var(--color-white);
        }

        .menu__option {
            margin: 1.2rem 0;
        }

        .menu__option .menu__link {
            color: var(--color-dark);
            font-weight: 300;
            letter-spacing: 1px;
        }

        .cover .cover__image {
            margin: 0 0 0.5rem 0;
            height: 230px;
            max-height: 230px;
            overflow: hidden;
        }

        .cover .cover__image .cover__img {
            width: 130%;
            height: auto;
            min-height: 100%;
        }

        .article-wrapper {
            padding: 0.5rem;
        }

        .article__info {
            padding-bottom: 0.9rem;
            border-bottom: 1px solid var(--color-gray-B);
            color: var(--color-dark);
        }

        .article__info .article__title {
            margin: 0 0 0.4rem 0;
            font-size: 1.6rem;
        }

        .article__info .article__date {
            display: block;
            font-size: 0.9rem;
            color: var(--color-gray-C);
        }

        .article__info .article__date .article__icon {
            font-size: 1.1rem;
            vertical-align: -5%;
            margin: 0 0 0.2rem 0;
        }

        .article__info .article__tag {
            text-transform: capitalize;
            color: var(--color-blue);
            border-bottom: 1px dashed var(--color-blue);
        }

        .article__content {
            color: var(--color-dark);
            font-size: 16px;
            text-align: left;
        }

        .article__content .article__notice {
            display: inline-block;
            padding: 0.5rem 0.3rem;
            margin: 1rem 0 0 0;
            background-color: var(--color-white);
            border: 1px solid var(--color-gray-B);
            box-sizing: border-box;
            border-radius: 3px;
        }

        .article__content h1, h2,h3,h4,h5,h6{
            margin: 2rem 0 0 0;
        }

        .article__content h1 {
            font-size: 2em;
        }

        .article__content h2 {
            font-size: 1.8em;
        }

        .article__content h3 {
            font-size: 1.5em;
        }

        .article__content h4 {
            font-size: 1.3em;
        }

        .article__content h5 {
            font-size: 1.2em;
        }

        .article__content h6 {
            font-size: 1.1em;
        }

        .article__content p {
            font-size: 1em;
            line-height: 20px;
            margin: 0.5rem 0 1rem 0;
        }

        .article__content strong {
            color: var(--color-black);
        }

        .article__content a {
            color: var(--color-blue);
            border-bottom: 1px dashed var(--color-blue);
        }

        .article__content blockquote {
            background: var(--color-gray-B);
            border-left: 8px solid var(--color-gray-C);
            width: 100%;
            box-sizing: border-box;
            font-weight: 300;
            margin: 1.5rem 0;
            padding: 0.3rem 0.5rem;
            position: relative;
        }

        .article__content blockquote strong {
            color: var(--color-dark);
            font-weight:  700;
        }

        .article__content blockquote p {
            margin: 0.8em 0;
            padding: 0.7rem 0 0.7rem 0;
        }

        .article__content blockquote small {
            display: inline-block;
            margin: 0.8em 0 0.8em 1.5em;
            font-size: 0.9em;
            color: var(--color-gray-C);
        }

        .article__content blockquote cite {
            font-weight: 700;
        }

        .article__content blockquote cite a {
            font-weight: normal;
        }

        .article__content code {
            box-sizing: border-box;
            padding: 0 0.2rem;
            font-weight: 300;
            font-family: var(--font-nutito);
            background-color: var(--color-gray-A);
            border: 1px solid var(--color-gray-B);
            border-radius: 2px;
            vertical-align: middle;
            color: var(--color-dark);
            user-select: text;
        }

        .article__content pre {
            background-color: var(--color-white);
            border: 1px solid var(--color-gray-B);
            padding: 1rem 0.5rem;
            overflow: auto;
            -moz-tab-size: 4;
            -o-tab-size: 4;
            tab-size: 4;
            line-height: 1.5;
        }

        .article__content pre code {
            background: none;
            border: none;
            color: var(--color-blue);
        }

        .article__social {
            margin: 2rem 0;
            text-align: left;
        }

        .article__social .article__text {
            font-size: var(--font-nutito);
            font-size: 1.2rem;
            font-weight: 300;
            letter-spacing: 2px;
            margin: 0 0 1.5rem 0;
            display: inline-block;
        }

        .article__social .article__icons {
            text-align: center;
        }

        .author {
            background-color: var(--color-gray-A);
            padding: 1.5rem 0 1rem 0;
        }

        .author__options {
            text-align: center;
        }

        .author__options .author__icon {
            vertical-align: 115%;
            font-size: 2rem;
            color: var(--color-blue);
            border-radius: 50%;
            margin: 0 0.7rem;
        }

        .author__options .author__img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }

        .author__options .author__button {
            display: inline-block;
            margin: 0.5rem 0 0 0;
            padding: 0.7rem 1.3rem;
            font-weight: 300;
            text-transform: uppercase;
            background-color: var(--color-blue);
            color: var(--color-white);
            border-radius: 20px;
        }

        .author__name {
            margin: 0.5rem 0;
        }

        .author__name .author__text {
            font-size: 1.4rem;
            text-transform: uppercase;
            font-family: var(--font-nutito);
            letter-spacing: 2px;
        }

        .author__name .author__text .author__link {
            color: var(--color-dark);
        }

        .author__info {
            padding: 1.5rem 0.7rem 0 0.7rem;
            text-align: center;
            box-sizing: border-box;
        }

        .author__info .author__location {
            color: var(--color-dark);
            font-size: 1.1rem;
        }

        .author__info .author__location .author__icon {
            margin: 0 0.2rem 0 0;
        }

        .author__info .author__location .author__text {
            font-family: var(--font-nutito);
            letter-spacing: 1px;
            text-transform: uppercase;
            font-weight: 700;
        }

        .author__about {
            text-align: left;
        }

        .author__about .author__bio, .author__about .author__post {
            font-weight: 300;
            line-height: 1.5rem;
            color: var(--color-dark);
        }

        .author__about .author__bio .author__link, .author__about .author__post .author__link {
            color: var(--color-blue);
            border-bottom: 1px dashed var(--color-blue);
        }

        .footer {
            background-color: var(--color-blue);
            color: var(--color-white);
            padding: 0.8rem;
            text-align: center;
        }

        .footer .footer__title {
            font-size: 1.5rem;
            font-family: var(--font-nutito);
            letter-spacing: 1px;
        }

        .footer .footer__title .footer__link {
            color: var(--color-white);
        }

        .footer .footer__info .footer__copyright, .footer .footer__info .footer__digitalocean {
            display: block;
            margin: 0.5rem 0;
            font-weight: 300;
        }

        .footer .footer__info .footer__copyright .footer__link, .footer .footer__info .footer__digitalocean .footer__link {
            color: var(--color-yellow);
            margin: 0 0 0 0.2rem;
            padding: 0 0 0.1rem 0;
            border-bottom: 1px dashed var(--color-yellow);
        }

    </style>

    {{!-- The AMP boilerplate --}}
