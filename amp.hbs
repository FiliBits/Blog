    {{!-- Accelerated Mobile Pages support for your posts --}}
    <script async src="https://cdn.ampproject.org/v0.js"></script>

    {{!-- Sidebar - AMP --}}
    <script async custom-element="amp-sidebar" src="https://cdn.ampproject.org/v0/amp-sidebar-0.1.js"></script>

    {{!-- Social share buttons - AMP --}}
    <script async custom-element="amp-social-share" src="https://cdn.ampproject.org/v0/amp-social-share-0.1.js"></script>
    
    {{!-- For the correct functioning of gifs, iframes and audio --}}
    {{amp_components}}

</head>

<body class="amp-template">
    {{#post}}
    
    {{!-- Header - AMP --}}
    <header class="header">
        {{> 'amp-header' }}
    </header>
    
    {{!-- Sidevar - Menu AMP --}}
    <amp-sidebar class='menu' id='sidebar1' layout='nodisplay' side="right">
        {{!-- icon - close --}}
        <a href='#' class="menu__arrow fa fa-arrow-right" on='tap:sidebar1.close'></a>
        {{!-- Blog navigation  --}}
        <ul class='menu__options no-list'>
            {{navigation}}
        </ul>
    </amp-sidebar>

    {{!-- If there is a image (cover) --}}
    {{#if image}}
    {{!-- Cover --}}
    <section class='cover'>
        {{> 'amp-cover-post'}}
    </section>
    {{/if}}
    
    {{!-- AMP wrapper --}}
    <main class="article-wrapper" role="main">
        {{!-- AMP post --}}
        <article class='article'>
            
            {{!-- AMP information --}}
            <header class="article__info">
                {{!-- AMP title --}}
                <h1 class="article__title">{{title}}</h1>
                {{!-- AMP date --}}
                <time class="article__date" datetime="{{date format='YYYY-MM-DD'}}">
                    <span class="article__icon fa fa-clock-o"></span>
                    <span class="article__text">{{date published_at format='DD MMM YYYY' timeago='true'}}</span>
                </time>
                {{!-- If there is a tag --}}
                {{#if tags}}
                    {{!-- Everything inside the #tags tags pulls data from the post (AMP) --}}
                    {{#foreach tags}}
                {{!-- AMP tag --}}
                <a href='{{url}}' class="article__tag">{{name}}</a>
                    {{/foreach}}
                {{/if}}
            </header>
            
            {{!-- AMP content --}}
            <section class="article__content">
                {{amp_content}}
                
                {{!-- AMP notice - To give notice that it is in an AMP version --}}
                <span class="article__notice">
                    Esta es la versión <a href='https://www.ampproject.org/' target='_blank'>AMP</a> del artículo, si quieres ver el artículo original y tener una mejor experiencia <a href='{{url}}'>da click aquí</a>. <strong>Recuerda que consumirás más datos</strong>
                </span>
            </section>
            
            {{!-- AMP social --}}
            <section class="article__social">
                {{!-- Social text --}}
                <strong class="article__text">Si te gusto el artículo, por favor, ayudame a compartir para que otras personas puedan leerlo.</strong>

                {{!-- Social icons --}}
                <div class="article__icons">

                    {{!-- Facebook --}}
                    <amp-social-share type="facebook" 
                        data-param-app_id="254325784911610"
                        data-param-text="{{title}}"
                        data-param-url="https://filisantillan.com{{url}}">
                    </amp-social-share>

                    {{!-- Twitter --}}
                    <amp-social-share type="twitter"
                        data-param-text="{{title}}"
                        data-param-url="https://filisantillan.com{{url}}">
                    </amp-social-share>
                    
                    {{!-- Google+ --}}
                    <amp-social-share type="gplus"
                        data-param-text="{{title}}"
                        data-param-url="https://filisantillan.com{{url}}">
                    </amp-social-share>
                    
                    {{!-- Linkedin --}}
                    <amp-social-share type="linkedin"
                        data-param-text="{{title}}"
                        data-param-url="https://filisantillan.com{{url}}">
                    </amp-social-share>
                </div>
        </section>

        </article>
    </main>
    
    {{!-- Everything inside the #author tags pulls data from the post (AMp) --}}
    {{#author}}
    <section class='author'>
        {{!-- Author options --}}
        <figure class="author__options">
            {{!-- Facebook icon --}}
            <a href='{{facebook_url}}' target='_blank'class='author__icon fa fa-facebook'></a>
            
            {{!-- Author image --}}
            <a href="{{url}}">
                <amp-img class='author__img' src='https://filisantillan.com{{image}}' alt='{{name}}' width="100" height="100"></amp-img>
            </a>

            {{!-- Twitter icon --}}
            <a href='{{twitter_url}}' target='_blank'class='author__icon fa fa-twitter'></a>
                
            {{!-- Author name --}}
            <figcaption class="author__name">
                <strong class='author__text'>
                    <a class='author__link' href="{{url}}">{{name}}</a>
                </strong>
            </figcaption>
            
            {{!-- If there is a website --}}
            {{#if website}}
            {{!-- Button --}}
            <a href="{{website}}" class='author__button btn-default btn--radius'>Sobre mí</a>
            {{/if}}
        </figure>
        
        {{!-- Author information --}}
        <div class="author__info">
            
            {{!-- If there is a location --}}
            {{#if location}}
            {{!-- Author location --}}
            <div class="author__location">
                <i class="author__icon fa fa-map-marker"></i>
                <span class="author__text">{{location}}</span>
            </div>
            {{/if}}
            
            {{!-- About the author --}}
            <div class="author__about">
                {{!-- If there is a biography --}}
                {{#if bio}}
                <p class="author__bio">{{bio}}</p>
                {{!-- If there is not a biography --}}
                {{else}}
                <p class='author__post'>Lee más <a class='author__link'href="{{url}}">artículos</a> sobre este autor.</p>
                {{/if}}
            </div>
        </div>
    </section>
    {{/author}}
    
    {{!-- Footer --}}
    <footer class="footer">
        {{> 'amp-footer'}}
    </footer>

    {{/post}}
</body>
