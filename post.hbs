{{!< default }}

{{#post}}
    <section class="cover cover--post {{#if feature_image}}isCoverEnable"
        style="background-image: url({{feature_image}}){{else}}isCoverDisabled{{/if}}">

        {{> "cover-posts" }}

    </section>

    <main class='post-container' role='main'>
        <article class='post-wrapper'>
            <section class='post'>

                <div class="post-resources">
                    <a href="#" class="post-resources__button btn">Soporte</a>
                    <a href="#" class="post-resources__button btn-secondary">Demo</a>
                    <a href="#" class="post-resources__button btn-alternative">Github</a>
                </div>

                {{content}}
            </section>

        </article>
    </main>

    {{#if @labs.members}}
        <section class="subscription">
            {{> subscription }}
        </section>
    {{/if}}

    {{!-- <section class='disqus'>
        {{> 'disqus'}}
    </section> --}}

{{/post}}

