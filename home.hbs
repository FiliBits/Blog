{{!< default }}

<section class="cover {{#if @site.cover_image}}isCoverEnable"
  style="background-image: url({{@site.cover_image}}){{else}}isCoverDisabled{{/if}}">

  {{> "cover/cover" }}

</section>

<main id="site-main" class="site-main" role="main">

  <section class="site-main-container u-content-center">
    <strong class="site-main-container__title u-font-large">Artículos</strong>

    <div class="site-main-wrapper">
      {{#get "posts" limit="5" include="tags,authors" filter="primary_tag:blog"}}
        {{> "posts/post-card"}}
      {{/get}}

      <div class="site-main-wrapper__button u-margin-x-auto">
        <a href="/blog" class="btn">Ver más artículos</a>
      </div>
    </div>
  </section>

  <section class="site-main-container site-main-container--bits">
    <div class="site-main-container__details u-content-center">

      <div class="site-main-container__info">
        <div class="site-main-container__textBlock">
          <strong class="site-main-container__title u-font-large">Bits</strong>
          <p class="site-main-container__description">
            Una colección de imágenes que explican diferentes conceptos entorno a desarrollo web. Sus principales
            características es que sean cortos, directos y fáciles de digerir, he de ahí el nombre (Bits). Espero que
            estos te sean de ayuda, como introducción, guía o simplemente para repasar conceptos.
          </p>
        </div>

        <div class="site-main-container__buttons">
          <a href="/blog" class="site-main-container__button btn">Ver más bits</a>
          <a href="/blog" class="site-main-container__button btn-alternative">Ver en github</a>
        </div>
      </div>

      <div class="site-main-wrapper site-main-wrapper--bits">
        {{#get "posts" limit="4" include="tags" filter="primary_tag:bit"}}
          {{> "posts/post-card-bits"}}
        {{/get}}
      </div>
    </div>
  </section>

  <section class="site-main-container u-content-center site-main-container--video">
    <strong class="site-main-container__title u-font-large">Videos</strong>

    <div class="site-main-wrapper site-main-wrapper--video">
      {{#get "posts" limit="4" include="tags" filter="primary_tag:video"}}
        {{> "posts/post-card"}}
      {{/get}}

      <div class="site-main-wrapper__button u-margin-x-auto">
        <a href="/videos" class="btn">Ver más videos</a>
      </div>
    </div>
  </section>
</main>

{{#if @labs.members}}
  <section class="subscription">
    {{> subscription/subscription }}
  </section>
{{/if}}