{{!--
    Template: Home

    This is the standard template for a list of posts.
    It is used by default for the home page and subsequent pages of blog posts.
--}}

{{!-- default main structure of the templates --}}

{{!< default }}

{{!-- Cover --}}
<section class="cover {{#if @site.cover_image}}isCoverEnable"
         style="background-image: url({{@site.cover_image}}){{else}}isDisabled{{/if}}">

  {{> "cover" }}

</section>

{{!-- Articles --}}
<section id="post-card-main" class="post-card-main" role="main">

  <div class="post-card-wrapper u-wrap-center">
    <strong class="post-card-wrapper__title">Art√≠culos</strong>

    <section class="post-card-container card--blog">
      {{#get "posts" limit="5" include="tags,authors" filter="primary_tag:blog"}}
      {{> "post-card"}}
      {{/get}}
    </section>
  </div>

  <div class="post-card-wrapper">
    <strong class="post-card-wrapper__title u-wrap-center">Bits</strong>

    <section class="post-card-container card--bits">
      {{#get "posts" limit="3" include="tags" filter="primary_tag:bit"}}
      {{> "post-card-bit"}}
      {{/get}}
    </section>
  </div>

  <div class="post-card-wrapper u-wrap-center">
    <strong class="post-card-wrapper__title">Videos</strong>

    <section class="post-card-container card--video">
      {{#get "posts" limit="3" include="tags" filter="primary_tag:video"}}
      {{> "post-card-video"}}
      {{/get}}
    </section>
  </div>

</section>

