{{!-- Cover of a index (default) --}}

{{!-- Cover image --}}
<div class="cover__imageContainer">
    <div class="cover__image {{#if @blog.cover_image}}image--true" style="background-image: url({{@blog.cover_image}}){{else}}image--false{{/if}}"></div>
</div>

<div class="cover__intro u-wrap-center">
    <div class="cover__description">
        <strong class="cover__text">
            {{@blog.description}}
        </strong>
    </div>

    <div class="cover__optionList">
        <a href="#" class="cover__option u-center-content">
            <div class="cover-wrapper">
                <div class="cover__iconContainer">
                    <i class="cover__icon o-icon-challenge"></i>
                </div>

                <div class="cover__optionName">
                    <span class="cover__text">Challenges</span>
                </div>
            </div>
        </a>

        <a href="#" class="cover__option u-center-content">
            <div class="cover-wrapper">
                <div class="cover__iconContainer">
                    <i class="cover__icon o-icon-news"></i>
                </div>

                <div class="cover__optionName">
                    <span class="cover__text">Noticias</span>
                </div>
            </div>
        </a>

        <a href="#" class="cover__option u-center-content">
            <div class="cover-wrapper">
                <div class="cover__iconContainer">
                    <i class="cover__icon o-icon-edit"></i>
                </div>

                <div class="cover__optionName">
                    <span class="cover__text">Comunidad</span>
                </div>
            </div>
        </a>
    </div>

    <div class="cover__author cover--imageHome u-only-desktop">

        <figure class="cover__image-wrapper">
            <img class="cover__image"
                 alt="Macbook code"
                 src="{{asset 'images/macbook.png'}}"
                 srcset="{{asset 'images/macbook@2x.png'}} 2x,
                         {{asset 'images/macbook@3x.png'}} 3x" >
        </figure>
    </div>

</div>