:root {
    --color-dark: #282B39;
    --color-blue: #299fd3;
    --color-purple: #B721FF;
    --color-yellow: #FEE140;
    --color-pink: #FA709A;
    --color-gray-150: rgb(150,150,150);
    --color-gray-180: rgb(180,180,180);
    --color-gray-220: rgb(220,220,220);

    --color-editor-dark: #1B1D26;
    --color-editor-gray: #898D94;
    --color-editor-light-gray: #ECF1F1;
    --color-editor-red: #EC7581;
    --color-editor-light-blue: #95CEF7;
    --color-editor-orange: #F29F68;
    --color-editor-yellow: #F0CB71;
    --color-editor-purple: #BBA0C9;
    --color-editor-green: #A8CEBA;
    

    --gradient-default: 130deg, var(--color-blue) 0%, var(--color-purple) 100%;
    --gradient-secondary: 130deg, var(--color-yellow) 0%, var(--color-pink) 100%;

    --shadow-complete: 5px 5px 10px color(black alpha(0.5));
    --shadow-middle: 2.5px 2.5px 5px color(black alpha(0.5));

    --spacer-size: 1.5rem;

    --radius-size: 5px;
    --radius-size-double: 10px;
    --radius-size-full: 25px;

    --sm-title: 22px;
    --md-title: 25px;
    --lg-title: 28px;
    --xl-title: 30px;

    --sm-text: 15px;
    --md-text: 16px;
    --lg-text: 17px;
    --xl-text: 19px;

    --btn-height: 45px;
    --author-image-size: 100px;
}

code,
pre {
    font-family: "Source Code Pro", Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
    color: var(--color-editor-light-gray);
    background: none;
    text-align: left;
    white-space: pre;
    word-spacing: normal;
    word-break: normal;
    word-wrap: normal;
    line-height: 1.5;

    -moz-tab-size: 4;
    -o-tab-size: 4;
    tab-size: 4;

    -webkit-hyphens: none;
    -moz-hyphens: none;
    -ms-hyphens: none;
    hyphens: none;
}

pre {
    padding: 1em;
    margin: 0;
    overflow: auto;
}

:not(pre) > code,
pre {
    background: var(--color-dark);
}

:not(pre) > code {
    padding: .1em;
    border-radius: .3em;
    white-space: normal;
}

body {
    font-family: "Nunito", system-ui;
    color: var(--color-dark);
}

h1, h2, h3, h4, h5, h6 {
    font-family: "Montserrat", system-ui;
    margin: 0;
}

figure {
    margin: 0;
}

a {
    text-decoration: none;
}

img {
    vertical-align: bottom;
}

input,
button {
    border: none;
    appearance: none;
}

input:focus,
button:focus {
    outline: none;
}

.u-no-list {
    list-style: none;
    margin: 0;
    padding: 0;
}

.header {
    position: absolute;
    z-index: 99;
    width: 100%;
}

.header .header-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacer-size);
}

.header__logo .header__title {
    font-size: var(--sm-title);
}

.header__logo .header__title .header__text {
    color: white;
}

.header__logo .header__title .header__text:first-child:after {
    content: " |";
}

.header__containerIcon {
    font-size: var(--sm-title);
}

.header__containerIcon .header__icon {
    color: white;
}

.navigation {
    background-image: linear-gradient(var(--gradient-secondary));
    width: 70%;
    padding: var(--spacer-size) calc(var(--spacer-size) * 1.5) 0;
}

.navigation__itemList {
    padding-top: calc(var(--spacer-size) + var(--btn-height));
}

.navigation__item {

    --dinamic-spacer-size: 1.5em;
    --icon-size: calc(var(--btn-height) - 8px);

    margin-bottom: var(--spacer-size);

}

.navigation__item:last-child {
    margin-bottom: 0;
}

.navigation .navigation__link {
    height: var(--btn-height);
    display: flex;
    justify-content: flex-start;
    align-items: center;
    text-transform: uppercase;
    color: white;
    font-weight: 700;
}

.navigation .navigation__icon {
    width: var(--icon-size);
    height: var(--icon-size);
    border-radius: 50%;
    background-color: white;
    color: var(--color-dark);
    text-align: center;
    line-height: var(--icon-size);
    margin-right: calc(var(--dinamic-spacer-size) / 2);
}

.navigation__close {
    background-image: linear-gradient(var(--gradient-default));
    box-shadow: 5px 5px 10px rgba(0,0,0,0.5);
    border-radius: var(--radius-size-full);
    color: white;
    line-height: var(--btn-height);
    text-transform: capitalize;
    position: absolute;
    width: calc(var(--btn-height)*2);
    height: var(--btn-height);
    font-size: var(--sm-title);
    display: flex;
    justify-content: flex-end;
    align-items: center;
    left: calc(var(--btn-height) * 2 * -1 / 3);
    padding-right: calc(var(--btn-height) / 2);
}


.cover .cover__gradient {
    width: 100%;
    height: 150px;
    background-image: linear-gradient(var(--gradient-default));
}

.cover__details {
    padding: var(--spacer-size);
}

.cover__details .cover__title {
    margin-bottom: var(--spacer-size);
}

.cover__details .cover__title .cover__text {
    font-size: var(--lg-title);
    letter-spacing: 1px;
    line-height: calc(var(--lg-title) * 1.3);
}

.cover__details .cover__tag {
    font-size: var(--sm-text);
    margin-right: calc(var(--spacer-size) / 2);
    margin-bottom: calc(var(--spacer-size) / 2);
    background-color: var(--color-blue);
    color: white;
    border-radius: var(--radius-size);
    padding: 1px 5px 1px;
}

.cover__details .cover__tag:last-child {
    margin-right: 0;
}

.post__content {
    padding: 0 var(--spacer-size) var(--spacer-size);
}

.post__content p:first-child {
    margin-top: 0;
}

.post__content a {
    color: var(--color-blue);
}

.post__content p,
.post__content ul,
.post_content ol {
    font-size: var(--md-text);
    line-height: calc(var(--md-text) + 9px);
    margin-bottom: var(--spacer-size);
}

.post__content h2,
.post__content h3,
.post__content h4,
.post__content h5,
.post__content h6 {
    margin-bottom: calc(var(--spacer-size) / 2);
}

.post__content h2 {
    margin-top: calc(var(--spacer-size) * 2);
    font-size: var(--xl-title);
    line-height: calc(var(--xl-title) * 1.2);
}

.post__content h3 {
    margin-top: calc(var(--spacer-size) * 1.5);
    font-size: var(--md-title);
    line-height: calc(var(--md-title) * 1.2);
}

.post__content h4 {
    font-size: var(--sm-title);
    line-height: calc(var(--sm-title) * 1.2);
}

.post__content h5 {
    font-size: calc(var(--sm-title) - 2px );
    line-height: calc((var(--sm-title) - 2px) * 1.2);
}

.post__content h6 {
    font-size: var(--xl-text);
    line-height: calc(var(--xl-text) * 1.2);
}

.post__content blockquote {
    background-color: var(--color-gray-220);
    margin: 0;
    padding: var(--spacer-size);
    position: relative;
    margin-bottom: var(--spacer-size);
    border-radius: var(--radius-size);
}

.post__content blockquote p {
    margin: 0;
}

.post__content blockquote:before {
    content: "";
    position: absolute;
    width: 10px;
    height: 100%;
    top: 0;
    left: 0;
    background-color: var(--color-gray-180);
    border-radius: var(--radius-size) 0 0 var(--radius-size);
}

.post__content code {
    background-color: var(--color-dark);
    color: var(--color-editor-red);
    border-radius: var(--radius-size);
    padding: 0 5px 2px;
    position: relative;
    top: -1px;
    margin: 0 3px 0 1px;
    font-size: 90%;
    overflow-wrap: break-word;
    word-wrap: break-word;
}

.post__content pre {
    margin-bottom: var(--spacer-size);
}

.post__content pre code {
    background: none;
    color: var(--color-editor-light-gray);
    border-radius: 0;
    padding: 0;
    position: initial;
    margin: 0;
    font-size: initial;
    overflow-wrap: initial;
    word-wrap: initial;
}

.optionList {
    background-color: var(--color-dark);
    padding: var(--spacer-size);
    display: flex;
    justify-content: space-evenly;
    flex-wrap: wrap;
    margin-bottom: var(--spacer-size);
}

.optionList .option__link {
    box-shadow: none;
    width: 80%;
    margin-bottom: var(--spacer-size);
    margin-left: auto;
    margin-right: auto;
    display: block;
    text-align: center;
    color: white;
    background-image: linear-gradient(var(--gradient-default));
    border-radius: var(--radius-size-full);
    display: inline-block;
    font-size: var(--md-text);
    color: white;
    padding: 0 1.2em;
    height: var(--btn-height);
    line-height: var(--btn-height);
    text-transform: capitalize;
}

.optionList .option__link:last-child {
    margin-bottom: 0;
}

.optionList .option__link .option__icon {
    display: none;
}

.optionList .opt--support {
    background: var(--color-yellow);
    color: var(--color-dark);
}

.optionList .opt--demo {
    background: var(--color-blue);
}

.optionList .opt--code {
    background: var(--color-purple);
}

.optionList .opt--source {
    background: var(--color-pink);
}

.text-source {
    display: block;
    text-align: center;
    color: var(--color-gray-150);
    margin-top: calc(var(--spacer-size) / 3);
}

.editor-title {
    background-color: var(--color-editor-dark);
    border-radius: var(--radius-size) var(--radius-size) 0 0;
    padding: calc(var(--spacer-size) / 3) calc(var(--spacer-size) / 2);
}

.editor-title .editor-title__text {
    font-size: var(-lg-title);
    color: white;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.flex-video {
    margin-top: var(--spacer-size);
    margin-bottom: calc(var(--spacer-size)*2);
}

.footer {
    background-color: var(--color-dark);
    padding: var(--spacer-size);
}

.footer .footer-wrapper {
    display: flex;
    flex-wrap: wrap;
}

.footer__info {
    margin-bottom: var(--spacer-size);
}

.footer__info .footer__legal {
    display: block;
    margin-bottom: calc(var(--spacer-size) / 2);
}

.footer__info .footer__legal .footer__text {
    font-size: var(--sm-text);
    color: white;
}

.footer__info .footer__legal .footer__text:after {
    content: " | ";
}

.footer__info .footer__legal .footer__text:last-child:after {
    content: "";
}

.footer__info .footer__server .footer__text {
    font-size: var(--sm-text);
    color: white;
}

.footer__social {
    width: 100%;
}

.footer__optionList {
    --btn-sm: calc(var(--btn-height) / 1.3);

    display: flex;
    justify-content: center;
}

.footer__optionList .footer__item {
    margin-right: calc(var(--spacer-size) / 2);
}

.footer__optionList .footer__item .footer__icon {
    display: inline-block;
    width: var(--btn-sm);
    height: var(--btn-sm);
    text-align: center;
    line-height: var(--btn-sm);
    background-color: white;
    font-size: var(--lg-text);
    color: var(--color-dark);
    border-radius: 50%;
    box-shadow: 2.5px 2.5px 8px rgba(0,0,0,0.5);
}

@media all and (min-width: 375px) {

    :root {
        --spacer-size: 1.6rem;

        --sm-title: 24px;
        --md-title: 26px;
        --lg-title: 28px;
        --xl-title: 32px;
    }
}

@media all and (min-width: 425px) {
    :root {
        --spacer-size: 1.7rem;

        --sm-title: 25px;
        --md-title: 27px;
        --lg-title: 29px;
        --xl-title: 34px;
    }

    .optionList .option__link {
        width: 47%;
    }

    .optionList .option__link:nth-last-child(2n) {
        margin-bottom: 0;
    }
}

@media all and (min-width: 600px) {
    .u-wrap-center {
        max-width: 600px;
        margin: 0 auto;
    }

    .navigation {
        width: 35%;
    }
}