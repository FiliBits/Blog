<div class="cover-container u-content-center">
    <div class="cover__introduction">
        {{#if title}}
            <span class="u-font-xlarge">{{title}}</span>
        {{else}}
            <span class="u-font-xlarge">Hola, soy </span>
            <strong class="u-font-xlarge">Fili.</strong>
        {{/if}}
    </div>

    <div class="cover__description">
        <p class="cover__text u-margin-top-disabled">
            {{#if description}}
                {{description}}
            {{else}}
                {{@site.description}}
            {{/if}}
        </p>
    </div>

    {{!-- {{#is "home"}}
        <div class="cover__button">
            <a href="#" class="btn-secondary">Saber m√°s</a>
        </div>
    {{/is}} --}}

    {{#is "bits"}}
        <div class="cover__button">
            <a href="https://rebrand.ly/bits" class="btn-secondary" target="_blank" rel="noopener noreferrer">Ver en
                github</a>
        </div>
    {{/is}}

    {{#is "videos"}}
        <div class="cover__button">
            <a href="https://rebrand.ly/f2jmm48" class="btn-secondary" target="_blank" rel="noopener noreferrer">Ver en
                youtube</a>
        </div>
    {{/is}}

    {{#if btn}}
        <div class="cover__button">
            <a href="{{btnUrl}}" class="btn-secondary">{{btn}}</a>
        </div>
    {{/if}}
</div>